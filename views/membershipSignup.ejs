<%- include('partials/header', {
  title: 'Join Membership',
  user,
  navLinks: [
    { href: '/my-orders', label: 'My Orders' },
    { href: '/shopping', label: 'Shopping' },
    { href: '/cart', label: 'Cart' },
    { href: '/logout', label: 'Logout' }
  ]
}) %>

<div class="container" style="max-width: 520px; margin-top: 32px; margin-bottom: 48px;">
  <div class="card shadow-sm p-4">
    <h2 class="mb-2">Join Membership</h2>
    <p class="text-muted">Earn points on every purchase.</p>
    <% if (messages && messages.error && messages.error.length) { %>
      <div class="alert alert-danger">
        <% messages.error.forEach(function(msg){ %><div><%= msg %></div><% }); %>
      </div>
    <% } %>
    <% if (messages && messages.success && messages.success.length) { %>
      <div class="alert alert-success">
        <% messages.success.forEach(function(msg){ %><div><%= msg %></div><% }); %>
      </div>
    <% } %>
    <form action="/membership/join" method="POST" class="mt-3">
      <button type="submit" class="btn btn-primary w-100">Join now</button>
      <a class="btn btn-link w-100 mt-2" href="/shopping">Back to shopping</a>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
