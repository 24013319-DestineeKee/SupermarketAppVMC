<%- include('partials/header', {
  title: 'My Orders - Supermarket App',
  user,
  navLinks: [
    { href: '/profile', label: 'Profile' },
    { href: '/my-orders', label: 'My Orders' },
    { href: '/shopping', label: 'Shopping' },
    { href: '/cart', label: 'Cart' },
    { href: '/logout', label: 'Logout' }
  ]
}) %>

<style>
  .page-shell { max-width: 1100px; margin: 32px auto 48px; padding: 0 16px; }
  .section-heading { display: flex; justify-content: space-between; align-items: center; gap: 12px; flex-wrap: wrap; }
  .section-heading .helper-text { margin: 0; color: #6b7280; }
  .table-card { overflow: hidden; border-radius: 16px; border: 1px solid #e5e7eb; box-shadow: 0 10px 26px rgba(16,24,40,0.06); }
  .table-card thead { background: #f8fafc; font-weight: 600; }
  .table-card tbody tr:hover { background: #f1f5f9; }
  .actions-cell { display: flex; flex-wrap: wrap; align-items: center; gap: 10px 12px; }
  .actions-cell form { margin: 0; }
  .actions-cell .btn { white-space: nowrap; }
  .table-card tbody tr.collapse > td { padding: 0 !important; border: 0 !important; }
  .table-card tbody tr.collapse:not(.show) { height: 0 !important; }
  .table-card tbody tr.collapse { display: none !important; }
  .table-card tbody tr.collapse.show { display: table-row !important; }
  .table-card tbody tr.collapsing { display: none !important; }
  .table-card tbody tr.collapse { visibility: collapse; }
  .table-card tbody tr.collapse.show { visibility: visible; }
  .table-card .table > :not(caption) > * > * { padding-top: 0.6rem; padding-bottom: 0.6rem; }
  .refund-status-btn:hover,
  .refund-status-btn:focus {
    background-color: inherit;
    color: inherit;
    border-color: inherit;
    box-shadow: none;
  }
</style>

<div class="page-shell">
  <div class="section-heading mb-3">
    <div>
      <h2 class="mb-0">My Orders</h2>
      <p class="helper-text mb-0">Track your purchases and access invoices.</p>
    </div>
    <div class="d-flex gap-2">
      <a href="/my-orders" class="btn btn-outline-primary btn-sm">Refresh</a>
      <a href="/shopping" class="btn btn-outline-secondary btn-sm">Back to shopping</a>
      <a href="/membership" class="btn btn-outline-success btn-sm">Membership</a>
    </div>
  </div>

  <% if (messages && messages.error && messages.error.length) { %>
    <div class="alert alert-danger">
      <% messages.error.forEach(function(msg){ %><div><%= msg %></div><% }); %>
    </div>
  <% } %>
  <% if (messages && messages.success && messages.success.length) { %>
    <div class="alert alert-success">
      <% messages.success.forEach(function(msg){ %><div><%= msg %></div><% }); %>
    </div>
  <% } %>

  <% if (!orders || !orders.length) { %>
    <div class="empty-state">You have no orders yet.</div>
  <% } else { %>
    <div class="table-card">
      <table class="table table-striped align-middle mb-0">
        <thead>
          <tr>
            <th>ID</th>
            <th>Payment Type</th>
            <th>Transaction ID</th>
            <th>Reference ID</th>
            <th>Status</th>
            <th>Refund</th>
            <th>Total</th>
            <th>Items</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(function(order){ %>
            <tr>
              <td>#<%= order.id %></td>
              <td><%= order.paymentMethod || 'N/A' %></td>
              <td><code><%= order.transactionId || 'N/A' %></code></td>
              <td><code><%= order.transactionRefId || 'N/A' %></code></td>
              <% const orderStatusRaw = (order.status || 'pending'); %>
              <% const statusLabel = orderStatusRaw === 'credit_refunded' ? 'Credit Refunded' : orderStatusRaw; %>
              <td><span class="badge bg-secondary text-uppercase"><%= statusLabel %></span></td>
              <td>
                <% const refundStatus = order.refund ? String(order.refund.status || '') : ''; %>
                <% const refundCompleted = refundStatus === 'approved_full' || refundStatus === 'approved_partial'; %>
                <% if (order.refund) { %>
                  <% const displayStatus = (refundStatus || 'pending').replace('approved_', 'approved '); %>
                  <a class="btn btn-sm btn-info text-uppercase text-decoration-none refund-status-btn" href="/my-refunds/<%= order.id %>"><%= displayStatus %></a>
                  <% if (refundCompleted) { %>
                    <div class="small text-muted">
                      Approved <%= (order.refund.supportType === 'partial_refund' ? 'partial' : 'full') %> refund: $<%= Number(order.refund.refundAmount || 0).toFixed(2) %>
                    </div>
                  <% } else if (refundStatus === 'rejected') { %>
                    <div class="small text-muted">
                      Rejected: <%= order.refund.resolutionNote || 'No reason provided.' %>
                    </div>
                  <% } %>
                <% } else { %>
                  <span class="text-muted">None</span>
                <% } %>
              </td>
              <td>$<%= (order.totalAmount || 0).toFixed(2) %></td>
              <td>
                <% const count = (order.items && order.items.length) ? order.items.length : 0; %>
                <button class="btn btn-sm btn-link p-0" type="button" data-bs-toggle="collapse" data-bs-target="#my-items-<%= order.id %>">
                  <%= count %> item<%= count === 1 ? '' : 's' %>
                </button>
              </td>
              <td class="actions-cell">
                <button class="btn btn-sm btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#my-items-<%= order.id %>">Details</button>
                <a class="btn btn-sm btn-primary" href="/invoice/<%= order.id %>">Invoice</a>
                <% if ((order.status || '').toLowerCase() !== 'completed') { %>
                  <form action="/orders/<%= order.id %>/complete" method="POST" onsubmit="return confirm('Mark this order as completed?');">
                    <button type="submit" class="btn btn-sm btn-success">Confirm Delivery</button>
                  </form>
                <% } %>
                <% if (!refundCompleted) { %>
                  <a class="btn btn-sm btn-warning" href="/orders/<%= order.id %>/report">Ask for refund</a>
                <% } %>
              </td>
            </tr>
            <tr class="collapse" id="my-items-<%= order.id %>">
              <td colspan="9">
                <% if (!order.items || !order.items.length) { %>
                  <div class="text-muted">No items.</div>
                <% } else { %>
                  <div class="table-responsive">
                    <table class="table table-sm mb-0">
                      <thead>
                        <tr>
                          <th>Product</th>
                          <th>Image</th>
                          <th>Quantity</th>
                          <th>Price</th>
                          <th>Line Total</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% order.items.forEach(function(item){ %>
                          <tr>
                            <td><%= item.productName || ('Product #' + item.productId) %></td>
                            <td>
                              <% if (item.image) { %>
                                <img src="/images/<%= item.image %>" alt="<%= item.productName %>" style="width: 50px;" loading="lazy" onerror="this.classList.add('d-none'); this.insertAdjacentHTML('afterend','<span class=&quot;text-muted&quot;>N/A</span>');">
                              <% } else { %>
                                <span class="text-muted">N/A</span>
                              <% } %>
                            </td>
                            <td><%= item.quantity %></td>
                            <td>$<%= Number(item.price || 0).toFixed(2) %></td>
                            <td>$<%= (Number(item.price || 0) * Number(item.quantity || 0)).toFixed(2) %></td>
                          </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                <% } %>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  <% } %>
</div>

<%- include('partials/footer') %>
